@{
    ViewData["Title"] = "Submitted Claims";
}

<h2>Submitted Claims</h2>

<!-- Check if there are any claims to display -->
@if (ViewBag.Claims != null && ViewBag.Claims.Count > 0)
{
    <!-- Table to display submitted claims -->
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Lecturer Name</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Total Amount</th>
                <th>Notes</th>
                <th>Uploaded Document</th>
                <th>Status</th>
                <th>Actions</th> <!-- Add Actions column for Approve/Reject -->
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in ViewBag.Claims)
            {
                <tr>
                    <!-- Display claim details -->
                    <td>@claim.ClaimId</td>
                    <td>@claim.LecturerName</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate:C</td>
                    <td>@claim.TotalAmount:C</td>
                    <td>@claim.Notes</td>
                    <td>
                        <!-- Check if a document is uploaded -->
                        @if (!string.IsNullOrEmpty(claim.DocumentPath))
                        {
                            <!-- Link to uploaded document -->
                            <a href="@claim.DocumentPath" target="_blank" title="Click to view document">View Document</a>
                        }
                        else
                        {
                            <span>No document uploaded</span>
                        }
                    </td>
                    <td>@claim.Status</td>
                    <td>
                        <!-- Approve and Reject buttons -->
                        <form method="post" asp-action="ApproveClaim">
                            <input type="hidden" name="claimId" value="@claim.ClaimId" />
                            <button type="submit" name="action" value="Approve" class="btn btn-success btn-sm">Approve</button>
                            <button type="submit" name="action" value="Reject" class="btn btn-danger btn-sm">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <!-- Message to display if there are no claims -->
    <p>No claims have been submitted yet.</p>
}
